{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es6"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true
  },
  "include": [
    "./*.ts",
    "./*.tsx"
  ]
}

{
  "compilerOptions": {
    "baseUrl": "../",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es6",
      // dom is needed here because @emotion/server depends on @emotion/css
      // which depends on @emotion/sheet, which depends on DOM types
      "dom"
    ],
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["../"],
    "types": [],
    "skipLibCheck": true,
    "paths": {
      "#is-browser": ["./types/resolved-condition.ts"],
      "#is-development": ["./types/resolved-condition.ts"]
    }
  },
  "include": ["./*.ts", "./*.tsx"]
}

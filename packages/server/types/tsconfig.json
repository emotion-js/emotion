{
  "compilerOptions": {
    "baseUrl": "../",
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "es6",
      // dom is needed here because @emotion/server depends on @emotion/css
      // which depends on @emotion/sheet, which depends on DOM types
      "dom"
    ],
    "module": "commonjs",
    "noEmit": true,
    "strict": true,
    "target": "es5",
    "typeRoots": ["../"],
    "types": [],
    "skipLibCheck": true
  },
  "include": ["./*.ts", "./*.tsx"]
}

{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,

    // tsc --build requires referenced projects to have emit enabled. We don't
    // actually use the files produced by tsc for anything.
    "noEmit": false,
    "outDir": ".tsc-output",

    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "incremental": true,
    "composite": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}

{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["packages", "scripts", "site", "test", "playgrounds"],
  "exclude": [
    "node_modules",
    "packages/*/types/test/*",
    "packages/*/types/test*"
  ]
}

{
  "private": true,
  "name": "emotion-monorepo",
  "version": "10.0.0",
  "scripts": {
    "build:watch": "preconstruct watch",
    "build": "preconstruct build",
    "test:size": "npm-run-all build size",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "test": "jest",
    "test:typescript": "lerna run test:typescript --parallel",
    "coverage": "jest --coverage --no-cache --ci --runInBand",
    "test:prod": "npm run build && jest -c jest.dist.js --no-cache --ci --runInBand",
    "lint:check": "eslint .",
    "test:watch": "jest --watch",
    "size": "bundlesize",
    "release": "npm run build && lerna publish",
    "lint": "eslint . --fix",
    "benchmark": "lerna exec --scope benchmarks npm run benchmark",
    "start:site": "lerna exec --scope emotion-site npm run start:site",
    "build:site": "lerna exec --scope emotion-site npm run build:site",
    "flow": "flow",
    "flow:check": "flow check --flowconfig-name=.flowconfig-ci",
    "postinstall": "opencollective postinstall",
    "version-packages": "lerna version --preid=beta"
  },
  "resolutions": {
    "**/react": "16.5.2",
    "**/react-dom": "16.5.2",
    "**/browserslist": "^3.2.8"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-stage-0": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-check-duplicated-nodes": "^1.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-flow-types": "^1.2.3",
    "babel-jest": "^23.6.0",
    "babel-plugin-closure-elimination": "^1.3.0",
    "babel-plugin-codegen": "^3.0.0",
    "babel-plugin-macros": "^2.0.0",
    "bundlesize": "^0.13.2",
    "codecov": "^2.3.1",
    "css": "^2.2.1",
    "cssjanus": "^1.2.0",
    "cssom": "^0.3.4",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.2.1",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.3.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.89.0",
    "get-lerna-packages": "^0.1.0",
    "hoist-non-react-statics": "^2.3.1",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "jest-in-case": "^1.0.2",
    "jest-junit": "^5.1.0",
    "jest-serializer-html": "^4.0.1",
    "jest-watch-typeahead": "^0.2.0",
    "jsdom": "^11.3.0",
    "lerna": "^3.4.0",
    "lint-staged": "^7.2.0",
    "module-alias": "^2.0.1",
    "npm-run-all": "^4.0.2",
    "opencollective": "^1.0.3",
    "polished": "^1.2.1",
    "preact": "^8.2.9",
    "preact-render-to-json": "^3.6.6",
    "preconstruct": "^0.0.32",
    "prettier": "1.14.3",
    "raf": "^3.4.0",
    "react": "^16.5.2",
    "react-art": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-native": "^0.57.0",
    "react-primitives": "^0.7.0",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.3.2",
    "react-testing-library": "^5.2.0"
  },
  "author": "Kye Hohenberger",
  "homepage": "https://emotion.sh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emotion-js/emotion.git"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [
    "styles",
    "emotion",
    "react",
    "css",
    "css-in-js"
  ],
  "eslintConfig": {
    "extends": [
      "standard",
      "standard-react",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier",
      "flowtype"
    ],
    "parser": "babel-eslint",
    "rules": {
      "prettier/prettier": "error",
      "react/prop-types": 0,
      "react/no-unused-prop-types": 0,
      "standard/computed-property-even-spacing": 0,
      "no-template-curly-in-string": 0,
      "camelcase": 0,
      "import/no-duplicates": 0,
      "flowtype/define-flow-type": 2
    },
    "env": {
      "browser": true
    },
    "overrides": [
      {
        "files": [
          "*.test.js",
          "**/__tests__/**"
        ],
        "env": {
          "jest": true
        }
      },
      {
        "files": [
          "**/packages/*/src/*",
          "**/packages/*/src/**/*"
        ],
        "rules": {
          "import/no-commonjs": 2
        }
      },
      {
        "files": [
          "**/__fixtures__/*"
        ],
        "rules": {
          "no-unused-vars": 0
        },
        "env": {
          "jest": false
        }
      }
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "site",
      "scripts/*",
      "playgrounds/*"
    ],
    "nohoist": [
      "**/dtslint"
    ]
  },
  "bolt": {
    "workspaces": [
      "packages/*",
      "site",
      "scripts/*",
      "playgrounds/*"
    ]
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ],
    "globals": {
      "react": "React"
    }
  },
  "bugs": {
    "url": "https://github.com/emotion-js/emotion/issues"
  },
  "bundlesize": [
    {
      "path": "./packages/emotion/dist/emotion.umd.min.js",
      "threshold": "7 Kb"
    },
    {
      "path": "./packages/styled-base/dist/styled-base.umd.min.js",
      "threshold": "9.7 Kb"
    },
    {
      "path": "./packages/core/dist/core.umd.min.js",
      "threshold": "7 Kb"
    }
  ],
  "lint-staged": {
    "*.{js,ts,tsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/emotion"
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  }
}
